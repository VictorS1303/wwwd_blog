---
const {
  class: className,
  id,
  accordionItemTitle,
  accordionItemText,
  accordionItemIcon,
} = Astro.props
---

<details
  class={`accordion-item bg-[var(--accordion-item-bg-color)] h-fit min-w-[250px] max-w-[300px] px-3 py-3 border-b-2 border-white
    first:rounded-t-md last:rounded-b-md
  `}
>
  <summary
    class="accordion-item-header flex items-center justify-between gap-4 cursor-pointer text-lg text-white"
  >
    <h3 class="text-xl">{accordionItemTitle}</h3>
    <i class=`${accordionItemIcon} fa-lg`></i>
  </summary>
  <p
    class="accordion-item-description-text text-wrap bg-transparent w-full h-fit my-4 leading-6 text-white text-xl"
  >
    {accordionItemText}
  </p>
</details>
