---
import TextBlock from "../components/text_block/TextBlock.astro"
import Layout from "./Layout.astro"
import Button from "../components/button/Button.astro"

const {
  title,
  src,
  textBlockParagraphText,
  blogPostsHref,
  blogPostsButtonText,
  randomBlogPostHref,
  randomBlogPostButtonText,
  alt,
} = Astro.props
---

<Layout title={title}>
  <div class="grid place-content-center min-h-screen">
    <div class="flex flex-col items-center gap-4 md:flex-row">
      <img
        src={src}
        class="h-[300px] w-[300px] object-contain flex-1"
        alt={alt}
      />
      <div
        class="flex-1 flex flex-col items-center gap-8 md:-order-1 md:items-start"
      >
        <TextBlock
          class="whitespace-pre-wrap text-xl text-center px-4 md:px-0 md:-order-1 md:text-start"
          textBlockParagraphText={textBlockParagraphText}
        />
        <div class="buttons-container flex gap-4">
          <Button
            href={blogPostsHref}
            class="bg-[var(--secondary-text-color)] text-white px-3 py-4 rounded-md text-mx transition-opacity duration-150 ease-in hover:opacity-90"
            buttonText={blogPostsButtonText}
          />

          <Button
            href={randomBlogPostHref}
            class="bg-[var(--secondary-text-color)] text-white px-3 py-4 rounded-md text-mx transition-opacity duration-150 ease-in hover:opacity-90"
            buttonText={randomBlogPostButtonText}
          />
        </div>
      </div>
    </div>
  </div>
</Layout>
