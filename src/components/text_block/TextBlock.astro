---
import Header from "../header/Header.astro"
import FadeOutOverlay from "../generals/overlay/FadeOutOverlay.astro"
const {
  class: className,
  id,
  headerText,
  hasHeader,
  textBlockParagraphText,
  isBlogPostCardText,
} = Astro.props
---

{
   isBlogPostCardText ? (
      <article class=`${className} relative flex flex-col gap-1` id={id}>
        {hasHeader && <Header isTextBlockHeader={true} headerText={headerText} />}
        <p class="text-xl line-clamp-4">
          {textBlockParagraphText}
        </p>
        <FadeOutOverlay />
      </article>
        ) : (
          <article class=`${className} relative flex flex-col gap-1` id={id}>
        {hasHeader && <Header isTextBlockHeader={true} headerText={headerText} />}
        <p class="text-xl">
          {textBlockParagraphText}
        </p>
      </article>
   )
}
