---
const {
  class: className,
  id: id,
  headerText,
  isSingleViewHeader,
  isTextBlockHeader,
  isBlogPostCardHeader,
  isHeroHeader,
} = Astro.props
---

{
  isTextBlockHeader ? (
    <header
      class={`${className === "hero-header" ? "text-white" : "text-[#f45b35]"} text-2xl font-bold uppercase tracking-wide`}
      id={id}
    >
      <h1>{headerText}</h1>
    </header>
  ) : isBlogPostCardHeader ? (
    <header class="text-xl font-bolder">{headerText}</header>
  ) : isHeroHeader ? (
    <header class="text-white text-4xl uppercase font-bolder md:text-5xl">
      {headerText}
    </header>
  ) : isSingleViewHeader ? (
    <header class="absolute z-[100000] top-[50%] left-[50%] -translate-1/2 text-white text-3xl text-center uppercase font-bolder md:text-5xl">
      {headerText}
    </header>
  ) : (
    <header
      class={`${className === "hero-header" ? "text-white" : "text-[#f45b35]"} text-2xl`}
      id={id}
    >
      <h1>{headerText}</h1>
    </header>
  )
}
